#include <stdio.h>
#include <conio.h>
#include <math.h>


void main()
{
	int numberOfDigits=1;
	float numberToMaximize,m=0;

	printf("Enter number to maximize: "); scanf_s("%f", &numberToMaximize);

	while (numberToMaximize >= 10) 
	{
		numberToMaximize = numberToMaximize / 10.;
		numberOfDigits++;
	
	
	}

	

	float *Array = new float[numberOfDigits];
	for (int numberOfCell = 0,n=1; numberOfCell < numberOfDigits; numberOfCell++)
	{
	

		Array[numberOfCell] = floor (numberToMaximize*n-floor(m)*10);
		m = numberToMaximize*n;
		n = n * 10;

	
	}



	for (int numberOfCell = 0; numberOfCell < numberOfDigits; numberOfCell++) printf("Array[%d]=%.0f\n", numberOfCell, Array[numberOfCell]);



	int numberOfDigitMoves;
	printf("Enter number of digit moves: ");
	scanf_s("%d", &numberOfDigitMoves);

	for (int leftCell = 0, rightCell = 1, valueOfTheLeftCell = 0, valueOfTheRightCell = 0, numberOfDoneDigitMoves = 0; numberOfDoneDigitMoves < numberOfDigits; leftCell++, rightCell++)
	{

		if (Array[leftCell] < Array[rightCell])
		{

			valueOfTheLeftCell = Array[rightCell];
			valueOfTheRightCell = Array[leftCell];
			Array[leftCell] = valueOfTheLeftCell;
			Array[rightCell] = valueOfTheRightCell;
			numberOfDoneDigitMoves++;
			
		}

		/*Без этой части всё (но не до конца, как задумывалось) прекрасно работает*/
		if (rightCell = numberOfDigits - 1)
		{
			leftCell = 0;
			rightCell = 0;
		}
		/*________________________________________________________________________*/


	}


	for (int numberOfCell = 0; numberOfCell < numberOfDigits; numberOfCell++) printf("Array[%d]=%.0f\n", numberOfCell, Array[numberOfCell]);


	/*Без этой части + без предыдущей всё работает.*/
	for (int i = 0; i < numberOfDigits; i++)
	{

		delete[] Array[i]; /*Array подчеркнуто волнистой (ошибка).*/

	}

	delete[] Array;
	/*_____________________________________________*/
	_getch();

}
