#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <conio.h>
#include <string.h>



void main()
{
	char numberToDivideString[10 ^ 18];
	printf("Enter number to divide: ");
	scanf("%s", &numberToDivideString);

	int numberOfDigits = strlen(numberToDivideString);
	printf("Number of digits = %d\n\n", numberOfDigits);

	for (int i = 0; i < numberOfDigits; i++) printf("numberToDivideString[%d] = %c\n", i, numberToDivideString[i]);



	int swaps;
	printf("\nEnter number of swaps: ");
	scanf_s("%d", &swaps);

	int numberOfTheAllDigits = numberOfDigits;

	int numberOfTheFirstCell=0, numberOfTheLastCell=numberOfDigits-1;

	int numberOfRepeats = swaps+1;


	while (numberOfTheLastCell != numberOfTheFirstCell)
	{


		int numberOfShiftsToTheRight = swaps;

		if (numberOfShiftsToTheRight >= numberOfDigits)
		{
			numberOfShiftsToTheRight = numberOfDigits-1;
			swaps -= numberOfDigits-1;
		}


		int rightCell = numberOfShiftsToTheRight, leftCell = rightCell - 1;         /*ПРОВЕРЕНО: ВЕРНО*/

		if (numberToDivideString[leftCell]<numberToDivideString[rightCell]) 
		{
			printf("IF activated\n");

			while (rightCell != numberOfTheFirstCell)
			{

				printf("while activated\n");

				if (leftCell < 0) break;

				printf("FIRST IF passed\n");

				numberOfRepeats--;
				if (numberOfRepeats <= 0) break;

				printf("SECOND IF passed\n");

				char leftCellValue = numberToDivideString[rightCell];
				char rightCellValue = numberToDivideString[leftCell];
				numberToDivideString[leftCell] = leftCellValue;
				numberToDivideString[rightCell] = rightCellValue;
				printf("numberToDivideString[leftCell] = %c\n", numberToDivideString[leftCell]);
				printf("numberToDivideString[rightCell] = %c\n", numberToDivideString[rightCell]);

				for (int i = 0; i < numberOfTheAllDigits; i++) printf("\nnumberToDivideString[%d] = %c\n", i, numberToDivideString[i]);
				leftCell--; rightCell--;
			

			}




			numberOfTheFirstCell++;
			swaps = swaps + swaps + 1;                                               /*Тут проблема, пришлось так указать.*/

			printf("numberOfTheFirstCell = %d\n", numberOfTheFirstCell);
			printf("numberOfDigits = %d\n", numberOfDigits);
			printf("swaps = %d\n", swaps);
			printf("numberOfShiftsToTheRight = %d\n", numberOfShiftsToTheRight);
		
		
		}




	}



	for (int i = 0; i < numberOfTheAllDigits; i++) printf("numberToDivideString[%d] = %c\n", i, numberToDivideString[i]);


	_getch();
}
